datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  output = "../generated/prisma"
}

model Task {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  title    String
  priority String
  status   String
  userId String
}

model User {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  username String
  email    String
}